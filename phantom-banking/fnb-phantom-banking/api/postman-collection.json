            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Wallet created successfully\", function () {",
                  "    pm.response.to.have.status(201);",
                  "    var response = pm.response.json();",
                  "    pm.expect(response.id).to.not.be.undefined;",
